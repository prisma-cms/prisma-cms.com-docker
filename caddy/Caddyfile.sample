
0.0.0.0/api/ 0.0.0.0:80/api/ {
    tls off
    gzip

    # log   / stdout  "Front API: {upstream} {combined}  UPSTREAM: {upstream} REWRITE: {rewrite_uri} TOKEN: {>X-App-Token} COOKIE:{~AppSession}\n"
 
    rewrite /api /


    proxy / api:4000 {
        transparent
        websocket
    }

}

